void modify()
{

	clrscr();
	char roll1[10];
	ofstream ofil;
	ofil.open("transac.txt",ios::out|ios::binary);
	ifstream ifil;
	ifil.open("record11.txt",ios::in|ios::binary);
	cout<<"Enter the roll no. for which entry to be done : ";
	gets(roll1);
	security obj;
	while(!ifil.eof())
	{


		/*if(ifil.eof())
		{
			break;
		}*/
		ifil.read((char*)&obj,sizeof(obj));

		/*if(ifil.eof())
		{
			break;
		} */
		if(strcmpi(obj.roll,roll1)!=0)
		{
			ofil.write((char*)&obj,sizeof(obj));
		}

		/*if(ifil.eof())
		{
			break;
		}*/
		if(strcmpi(obj.roll,roll1)==0)
		{
			time_t now=time(0);
			char*dt=ctime(&now);

			strcpy(obj.date_in,dt);
			ofil.write((char*)&obj,sizeof(obj));

			cout<<"Entry time updted !!";
		}
		if(ifil.eof())
		{
			break;
		}
	}
	ofil.close();
	ifil.close();
	remove("record11.txt");
	rename("transac.txt","record11.txt");

	getch();

}


void read()
{
	//clrscr();
	//cout<<"NAME";

	ifstream ifil;
	ifil.open("record11.txt",ios::in|ios::binary);
	security obj;
	while(!ifil.eof())
	{
		ifil.read((char*)&obj,sizeof(obj));
		if(ifil.eof())
		{
			break;
		}
		obj.disp();
		cout<<endl;
	}
	getch();

	ifil.close();
}

void security::disp()
{



	cout<<name<<"\t "<<roll<<" \t"<<room<<" \t"<<" \t"<<date_out<<" \t"<<date_in;

}




