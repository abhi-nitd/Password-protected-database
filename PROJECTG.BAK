class security
{
	private : char name[20];
		  int room;

		  char date_out[25];




	public : void out();
		 void entry();
		 char date_in[25];
		 void disp();
		 char roll[10];



};

void security :: out()
{
	clrscr();
	cout<<"Enter name :\n ";
	gets(name);
	cout<<"Enter the roll no. :\n ";
	gets(roll);
	cout<<"Enter the room no. : \n";
	cin>>room;

       //	cout<<"Enter the place you are going to : \n";
       //	gets(place);
	time_t now=time(0);
	char*dt=ctime(&now);

	strcpy(date_out,dt);

}

